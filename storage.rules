rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // ðŸ“¸ Avatars folder - User uploaded profile pictures
    match /avatars/{fileName} {
      // Allow anyone to read avatars (public display)
      allow read: if true;
      
      // Only authenticated users can upload their own avatar
      // Filename must match pattern: avatar_{userId}_{timestamp}.jpg
      allow create: if request.auth != null 
                    && fileName.matches('avatar_' + request.auth.uid + '_[0-9]+\\.jpg')
                    && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                    && request.resource.contentType.matches('image/.*');
      
      // Only user can update their own avatar
      allow update: if request.auth != null 
                    && fileName.matches('avatar_' + request.auth.uid + '_.*')
                    && request.resource.size < 5 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');
      
      // Only user can delete their own avatar
      allow delete: if request.auth != null 
                    && fileName.matches('avatar_' + request.auth.uid + '_.*');
    }
    
    // ðŸŽ¬ Movie posters/images (if needed in future)
    match /movies/{movieId}/{fileName} {
      allow read: if true;  // Public read
      allow write: if false;  // Admin only (upload via Firebase Console)
    }
    
    // ðŸŽ­ Theater images (if needed in future)
    match /theaters/{theaterId}/{fileName} {
      allow read: if true;  // Public read
      allow write: if false;  // Admin only
    }
    
    // Default: deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
